<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_head" />

    <LinearLayout
        android:id="@+id/ll_fuwushang_phone"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginTop="30px"
        android:background="@color/cl_white"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="@color/cl_black"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_zhanghao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入服务商账号"
            android:maxLines="1"
            android:textColor="@color/cl_666"
            android:textSize="32px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cl_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="@color/cl_bg_view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/cl_white"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务商姓名"
            android:textColor="@color/cl_black"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_xingming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/cl_666"
            android:textSize="32px" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:text="- 更改服务商后，新的服务商将成为你的上级。"
        android:textSize="28px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_queren"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="140px"
        android:background="@drawable/dialog_btn_normal"
        android:text="确定"
        android:textColor="@color/cl_white"
        android:textSize="34px" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:background="@drawable/dialog_btn_cancel"
        android:text="取消"
        android:textColor="@color/cl_white"
        android:textSize="34px"
        android:visibility="gone" />


</com.zhy.autolayout.AutoLinearLayout>