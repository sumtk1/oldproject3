<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:paddingLeft="46px"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/tv_item_zhangdan_mingxi_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20px"
            android:text=""
            android:textColor="#000"
            android:textSize="36px" />


        <TextView
            android:id="@+id/tv_item_zhangdan_mingxi_miaoshu"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_item_zhangdan_mingxi_jine"
            android:layout_marginTop="26px"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="#666"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_item_zhangdan_mingxi_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_item_zhangdan_mingxi_zhuangtai"
            android:layout_marginTop="26px"
            android:text=""
            android:textColor="#999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_item_zhangdan_mingxi_zhuangtai"
            android:layout_width="200px"
            android:layout_height="40px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_item_zhangdan_mingxi_jine"
            android:gravity="right"
            android:text=""
            android:textColor="@color/cl_activity_newmain"
            android:textSize="26px" />
    </RelativeLayout>
</RelativeLayout>
