<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E2E3">

    <include
        android:id="@+id/include3"
        layout="@layout/include_head" />

    <LinearLayout
        android:id="@+id/ll_shangping_yangshi"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_below="@+id/include3"
        android:background="@color/cl_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_shangping_tupian"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_gravity="center"
            android:layout_marginLeft="30px" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="22px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shangping_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是"
                android:textColor="@color/share_txt_color"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_shangping_fuhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shangping_name"
                android:layout_marginTop="26px"
                android:text="￥"
                android:textColor="@color/share_txt_color"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_shangping_jinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shangping_name"
                android:layout_marginTop="26px"
                android:layout_toRightOf="@+id/tv_shangping_fuhao"
                android:text="100"
                android:textColor="@color/share_txt_color" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_shangping_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px"
            android:text=""
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dibulan"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentBottom="true"
        android:background="@color/cl_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shangjia_jujue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="#333333"
            android:textSize="30px" />

        <View
            android:layout_width="2px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16px"
            android:layout_marginTop="16px"
            android:background="@color/cl_bg_view" />

        <TextView
            android:id="@+id/tv_shangjia_guanfang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="官方介入"
            android:textColor="#333333"
            android:textSize="30px" />

        <View
            android:layout_width="2px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16px"
            android:layout_marginTop="16px"
            android:background="@color/cl_bg_view" />

        <TextView
            android:id="@+id/tv_shangjia_tongyi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同意退货"
            android:textColor="#333333"
            android:textSize="30px" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scro_tuikuan_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_dibulan"
        android:layout_below="@+id/ll_shangping_yangshi">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35px"
                android:background="@drawable/bg_background_gray"
                android:padding="10px"
                android:text=""
                android:textColor="#FEFEFE" />

            <TextView
                android:id="@+id/tv_buyer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22px"
                android:layout_marginTop="48px"
                android:text=""
                android:textColor="#666666" />

            <RelativeLayout
                android:id="@+id/rl_maijia_liaotian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tiem"
                android:layout_marginLeft="22px"
                android:layout_marginRight="27px"
                android:layout_marginTop="24px"
                android:background="@drawable/ic_lanse">

                <LinearLayout
                    android:id="@+id/ll_xieshangtuihuoyaoqiu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买家发起申请"
                        android:textColor="#333333"
                        android:textSize="30px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginTop="26px"
                        android:background="@color/cl_bg_view" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="发起了退货退款申请"
                        android:textColor="#666666"
                        android:textSize="24px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退货原因："
                            android:textColor="#666666"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tv_yuanying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款金额："
                            android:textColor="#666666"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tv_jingqian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15px"
                        android:layout_marginTop="15px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退货说明："
                            android:textColor="#666666"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tv_shuoming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tuikuan_pingzheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15px"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_tuikuan_pingzheng_1"
                            android:layout_width="180px"
                            android:layout_height="180px" />

                        <ImageView
                            android:id="@+id/im_tuikuan_pingzheng_2"
                            android:layout_width="180px"
                            android:layout_height="180px"
                            android:layout_marginLeft="20px" />

                        <ImageView
                            android:id="@+id/im_tuikuan_pingzheng_3"
                            android:layout_width="180px"
                            android:layout_height="180px"
                            android:layout_marginLeft="20px" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_xieshangjintuikuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买家发起申请"
                        android:textColor="#333333"
                        android:textSize="30px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginTop="26px"
                        android:background="@color/cl_bg_view" />

                    <TextView
                        android:id="@+id/tv_jintuikuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15px"
                        android:layout_marginTop="30px"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="24px" />

                    <LinearLayout
                        android:id="@+id/ll_tuikuan_zhaopian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15px"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_tuikuan_zhaopian_1"
                            android:layout_width="180px"
                            android:layout_height="180px" />

                        <ImageView
                            android:id="@+id/im_tuikuan_zhaopian_2"
                            android:layout_width="180px"
                            android:layout_height="180px"
                            android:layout_marginLeft="20px" />

                        <ImageView
                            android:id="@+id/im_tuikuan_zhaopian_3"
                            android:layout_width="180px"
                            android:layout_height="180px"
                            android:layout_marginLeft="20px" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_sales_tiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_maijia_liaotian"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35px"
                android:background="@drawable/bg_background_gray"
                android:padding="10px"
                android:text=""
                android:textColor="#FEFEFE" />

            <TextView
                android:id="@+id/tv_sales_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_maijia_liaotian"
                android:layout_marginLeft="22px"
                android:layout_marginTop="48px"
                android:text="环游购系统"
                android:textColor="#666666" />

            <RelativeLayout
                android:id="@+id/rl_xitong_tankuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sales_tiem"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="22px"
                android:layout_marginRight="27px"
                android:layout_marginTop="24px"
                android:background="@drawable/ic_chengse">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      >

                        <TextView
                            android:id="@+id/tv_xieshang_zhuangtai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="30px"
                            android:textColor="#333333"
                            android:textSize="30px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tv_timeremaining"
                            android:layout_marginRight="30px"
                            android:src="@mipmap/ic_shenqing_shijian" />

                        <TextView
                            android:id="@+id/tv_timeremaining"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30px"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginTop="26px"
                        android:background="@color/cl_bg_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15px"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_shuoming_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30px"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tv_shuoming_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16px"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tv_shuoming_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16px"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="24px" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginTop="26px"
                        android:background="@color/cl_bg_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px"
                        android:layout_marginTop="23px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单号："
                            android:textColor="#666666"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tv_danhao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="24px" />

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_tuihuo_tiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_xitong_tankuang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35px"
                android:background="@drawable/bg_background_gray"
                android:padding="10px"
                android:text=""
                android:textColor="#FEFEFE"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_tuihuo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_xitong_tankuang"
                android:layout_marginLeft="22px"
                android:layout_marginTop="48px"
                android:text="环游购系统"
                android:textColor="#666666"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_tongyi_tuikuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tuihuo_tiem"
                android:layout_marginLeft="22px"
                android:layout_marginRight="27px"
                android:layout_marginTop="24px"
                android:background="@drawable/ic_lanse"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_tuongyituihuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:text="同意退款"
                    android:textColor="#333333"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_tongyituihuo_jinge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tuongyituihuo"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:textSize="24px" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jujue_tuikuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tongyi_tuikuan"
                android:layout_marginLeft="22px"
                android:layout_marginRight="27px"
                android:layout_marginTop="24px"
                android:background="@drawable/ic_lanse"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_jujuetuihuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:text="卖家拒绝了申请"
                    android:textColor="#333333"
                    android:textSize="30px" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@+id/tv_jujuetuihuo"
                    android:layout_marginTop="24px"
                    android:background="@color/cl_bg_view" />

                <TextView
                    android:id="@+id/tv_jujuetuihuo_yuanyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:text="拒绝原因"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_jujuetuihuo_shuoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jujuetuihuo_yuanyin"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:text="拒绝说明"
                    android:textSize="24px" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
