<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_background"
    android:orientation="vertical">

    <include
        android:id="@+id/include8"
        layout="@layout/include_head" />

    <LinearLayout
        android:id="@+id/ll_tkxq_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include8"
        android:background="@color/cl_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tuikuan_success"
            android:layout_width="124px"
            android:layout_height="124px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58px"
            android:scaleType="centerCrop"
            android:src="@mipmap/gou"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_tuikuan_close"
            android:layout_width="124px"
            android:layout_height="124px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58px"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_tuikuan_guanbi"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_tuikuan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="58px"
            android:layout_marginTop="34px"
            android:text="退款成功"
            android:textColor="@color/cl_ff7f29"
            android:textSize="15sp" />

        <View
            style="@style/title_view"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:paddingLeft="32px"
            android:text="退款信息"
            android:textColor="@color/cl_333333"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_tkxq_zhongbu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_tkxq_top"
        android:background="#fafafa"
        android:paddingBottom="16px"
        android:paddingLeft="30px"
        android:paddingTop="16px">

        <ImageView
            android:id="@+id/iv_tkxq_sptupian"
            android:layout_width="150px"
            android:layout_height="150px" />

        <TextView
            android:id="@+id/tv_tkxq_biaoti"
            android:layout_width="348px"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_tkxq_jine"
            android:layout_alignBottom="@+id/tv_tkxq_jine"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/cl_333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_tkxq_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24px"
            android:layout_marginTop="24px"
            android:text=""
            android:textColor="@color/cl_333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_tkxq_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_tkxq_biaoti"
            android:layout_below="@+id/tv_tkxq_biaoti"
            android:layout_marginTop="18px"
            android:text=""
            android:textColor="@color/cl_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tkxq_shuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_tkxq_color"
            android:layout_marginRight="28px"
            android:text=""
            android:textColor="@color/cl_999999"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_tkxq_zhongbuxia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_tkxq_zhongbu"
        android:background="@color/cl_white"
        android:orientation="vertical"
        android:paddingBottom="20px"
        android:paddingLeft="28px"
        android:paddingTop="20px">

        <TextView
            android:id="@+id/tv_tkxq_yuanyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款原因："
            android:textColor="@color/cl_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tkxq_tuihuojine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18px"
            android:text="退货金额："
            android:textColor="@color/cl_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tkxq_tuikuanshuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18px"
            android:text="退款说明："
            android:textColor="@color/cl_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tkxq_shenqingshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18px"
            android:text="申请时间："
            android:textColor="@color/cl_666666"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentBottom="true"
        android:background="@color/cl_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ttxq_lianximaijia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="联系买家"
            android:textColor="@color/cl_666666"
            android:textSize="12sp" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="16px"
            android:layout_marginTop="16px"
            android:background="#CDCDCD" />

        <TextView
            android:id="@+id/tv_ttxq_guanfangzixun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="官方咨询"
            android:textColor="@color/cl_666666"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>
