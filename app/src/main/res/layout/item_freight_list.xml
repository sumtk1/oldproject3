<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/cl_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_freight_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_freight_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_frehgit_no_mail" />

        <TextView
            android:id="@+id/tv_freight_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_freight_type"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/cl_333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_freight_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_freight_name"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="62dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#ff666666"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/iv_freight_choice"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_above="@+id/divider"
            android:src="@mipmap/ic_fregiht_template_choice"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp" />

        <View
            android:id="@+id/divider"
            style="@style/buju_view"
            android:layout_below="@+id/tv_freight_detail"
            android:layout_marginTop="15dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_freight_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/cl_white">

        <LinearLayout
            android:id="@+id/ll_freight_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/ll_freight_delete"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:src="@mipmap/ic_yunfei_bianji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="编辑"
                android:textColor="@color/cl_666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_freight_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="17dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:src="@mipmap/ic_yunfei_shangchu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="删除"
                android:textColor="@color/cl_666"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>