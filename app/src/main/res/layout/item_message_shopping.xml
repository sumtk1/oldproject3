<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:background="@drawable/bg_radius_cecece"
            android:paddingBottom="9px"
            android:paddingLeft="24px"
            android:paddingRight="23px"
            android:paddingTop="10px"
            android:text="0000"
            android:textColor="#fefefe"
            android:textSize="22px"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/ll_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="30px"
            android:gravity="center_vertical"
            android:background="@drawable/bg_dialog"
            android:paddingBottom="28px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="28px">

            <ImageView
                android:id="@+id/iv_message_icon"
                android:layout_width="106px"
                android:layout_height="106px"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/tv_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_toLeftOf="@+id/tv_message_state"
                android:layout_toRightOf="@+id/iv_message_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="#333333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_message_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20px"
                android:text=""
                android:textColor="#FF4772"
                android:textSize="26px" />

            <TextView
                android:id="@+id/tv_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message_title"
                android:layout_marginLeft="20px"
                android:layout_marginTop="24px"
                android:layout_toRightOf="@+id/iv_message_icon"
                android:text=""
                android:textColor="#666666"
                android:textSize="22px" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>