<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/cl_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_grade_record_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="获得评价"
        android:textColor="@color/cl_333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_grade_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_grade_record_type"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="2016/2/14 15:52:14"
        android:textColor="@color/cl_999"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_grade_record_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="+5"
        android:textColor="#ff6666"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ffe1e2e3" />
</RelativeLayout>