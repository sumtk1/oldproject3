<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:background="@color/cl_white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_aftersale_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/cl_999" />

        <TextView
            android:id="@+id/tv_aftersale_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/iv_aftersale_product_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/cl_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_aftersale_product_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_aftersale_product_image"
            android:text=""
            android:textColor="@color/cl_666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_aftersale_product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="75dp"
            android:text=""
            android:textColor="@color/cl_activity_newmain"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e0e0e0"

            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_aftersale_product_reason"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text=""
        android:textColor="@color/cl_666"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"

        />

    <TextView
        android:id="@+id/tv_aftersale_product_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text=""
        android:textColor="@color/cl_666"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"

        />

    <TextView
        android:id="@+id/tv_aftersale_product_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text=""
        android:textColor="@color/cl_666"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"

        />

    <TextView
        android:id="@+id/tv_aftersale_product_orderid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text=""
        android:textColor="@color/cl_666"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_after_sale_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:text="退款说明:    "
            android:textColor="@color/cl_666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_aftersale_product_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_after_sale_txt"
            android:layout_alignBottom="@+id/tv_after_sale_txt"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@+id/tv_after_sale_txt"
            android:layout_toRightOf="@+id/tv_after_sale_txt"
            android:text=""
            android:textColor="@color/cl_666"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#e0e0e0" />

        <TextView
            android:id="@+id/tv_after_sale_voucher"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/divider"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="退款凭证:" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_after_sale_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_after_sale_voucher"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"

            />
    </RelativeLayout>

</LinearLayout>