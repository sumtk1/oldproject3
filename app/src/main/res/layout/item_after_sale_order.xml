<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_after_sale_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_after_sale_order_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       >

        <ImageView
            android:id="@+id/iv_item_after_sale_order_icon"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_xiaoxi" />

        <TextView
            android:id="@+id/tv_item_after_sale_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_item_after_sale_order_icon"
            android:textColor="@color/cl_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_after_sale_order_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:text=""
            android:textColor="@color/cl_ff7f29"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_after_sale_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26px"
            android:textColor="@color/cl_black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_item_after_sale_order_deadline"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_marginRight="8px"
            android:layout_toLeftOf="@+id/tv_item_after_sale_order_deadline" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:paddingLeft="14dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <FrameLayout
            android:id="@+id/fl_item_after_sale_order_img"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginRight="20px">

            <ImageView
                android:id="@+id/iv_item_after_sale_order_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_item_after_sale_order_deliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_item_after_sale_order_product_name"
            android:layout_width="335px"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/fl_item_after_sale_order_img"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/cl_333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_item_after_sale_order_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_after_sale_order_product_name"
            android:layout_marginTop="18px"
            android:layout_toRightOf="@+id/fl_item_after_sale_order_img"
            android:textColor="@color/cl_999999"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            android:id="@+id/tv_item_after_sale_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="合计"
            android:textColor="@color/cl_333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_item_after_sale_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/tv_item_after_sale_order_price"
            android:text="数量:1"
            android:textColor="@color/cl_333333"
            android:textSize="12dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#F9F9F9" />

    <RelativeLayout
        android:id="@+id/rl_after_sale_order_manage"
        android:layout_width="match_parent"
        android:layout_height="80px">

        <Button
            android:id="@+id/btn_after_sale_order_manage"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"
            android:background="@drawable/bg_button_26_shape"
            android:textColor="@color/cl_ff7f29"
            android:textSize="12sp"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cl_e1e2e3"
        />
</LinearLayout>
