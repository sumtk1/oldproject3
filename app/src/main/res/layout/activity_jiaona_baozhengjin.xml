<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_jiaona_baozhengjin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include16"
        layout="@layout/include_head" />

    <RelativeLayout
        android:id="@+id/rl_baozhengjin_baozhang"
        android:layout_width="match_parent"
        android:layout_height="442px"
        android:layout_below="@id/include16"
        android:background="#FF8A51"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/iv_baozhengjin_dollor"
            android:layout_width="134px"
            android:layout_height="134px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54px"
            android:src="@mipmap/ic_baozhengjin_baozhang_dollor" />

        <TextView
            android:id="@+id/tv_baozhengjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_baozhengjin_dollor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16px"
            android:gravity="center"
            android:text="保证金"
            android:textColor="@color/cl_white"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_baozhengjin_shumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_baozhengjin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:textColor="@color/cl_white"
            android:textSize="90px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_baozhengjin_shumu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:text="缴纳保证金后，即可正常上传和销售商品"
            android:textColor="@color/cl_white"
            android:textSize="28px" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_baozhengjin_jiaona"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_baozhengjin_baozhang"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="126px"
        android:background="@drawable/bg_btn_confirm"
        android:text="去缴纳"
        android:textColor="@color/cl_white"
        android:textSize="36px" />

</RelativeLayout>
