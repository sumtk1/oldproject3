<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px">

        <TextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:layout_toLeftOf="@id/tv_phonenum"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="32px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10px"
        android:paddingBottom="30px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:text=""
        android:textColor="#333333"
        android:textSize="28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#F5F5F5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:paddingLeft="30px">

        <RelativeLayout
            android:id="@+id/rl_checkbox_set_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cb_set_default"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/checkbox_blue"
                android:button="@null" />

            <TextView
                android:id="@+id/tv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_toRightOf="@id/cb_set_default"
                android:text="设为默认"
                android:textColor="#333333"
                android:textSize="28px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_dianjixiaoguo"
            android:drawableLeft="@mipmap/ic_delete_3"
            android:drawablePadding="15px"
            android:gravity="center"
            android:paddingLeft="15px"
            android:paddingRight="30px"
            android:text="删除"
            android:textColor="#333333"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_delete"
            android:background="@drawable/bg_btn_dianjixiaoguo"
            android:drawableLeft="@mipmap/ic_edit"
            android:drawablePadding="15px"
            android:gravity="center"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:text="编辑"
            android:textColor="#333333"
            android:textSize="28px" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="@color/cl_bg_gray" />
</LinearLayout>