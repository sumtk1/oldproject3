<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_background">

    <include layout="@layout/include_head" />

    <View
        android:id="@+id/view"
        style="@style/title_view"
        android:layout_below="@+id/toptitle_rl" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="30px">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80px">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:gravity="fill_vertical"
                android:text="旧密码"
                android:textColor="#333333"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et_chenge_pwd_oldpwd"
                style="@style/style_all_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:background="@null"
                android:hint="请输入旧密码"
                android:inputType="textPassword" />
        </RelativeLayout>

        <include layout="@layout/include_view" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80px">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:text="新密码"
                android:textColor="#333333"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et_chenge_pwd_newpwd"
                style="@style/style_all_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:background="@null"
                android:hint="请输入新密码(不少于6位数)"
                android:inputType="textPassword" />
        </RelativeLayout>

        <include layout="@layout/include_view" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80px">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textColor="#333333"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et_change_pwd_renewpwd"
                style="@style/style_all_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:background="@null"
                android:hint="请输入确认密码"
                android:inputType="textPassword" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
