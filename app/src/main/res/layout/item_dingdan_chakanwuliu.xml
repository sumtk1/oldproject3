<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@color/cl_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rl_trace_item"
            android:layout_width="83px"
            android:layout_height="98px"
            android:orientation="vertical">

            <View
                android:id="@+id/item_dingdan_chakanwuliu_xian"
                android:layout_width="1px"
                android:layout_height="26px"
                android:layout_gravity="center_horizontal"
                android:background="#999" />

            <ImageView
                android:id="@+id/item_dingdan_chakanwuliu_dian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_dingdan_chakanwuliu_xian"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/quanquan" />


            <View
                android:id="@+id/item_dingdan_chakanwuliu_dizhi"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:background="#999" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98px">

            <TextView
                android:id="@+id/tv_chakan_wuliu_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26px"
                android:text="您的订单已出库"
                android:textColor="@color/cl_999"
                android:textSize="20px" />

            <TextView
                android:id="@+id/tv_chakan_wuliu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_chakan_wuliu_context"
                android:text="2016-6-17 16:30:21"
                android:textColor="@color/cl_999"
                android:textSize="20px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/cl_eee" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
