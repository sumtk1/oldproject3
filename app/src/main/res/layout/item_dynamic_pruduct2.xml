<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_circular_white">

        <ImageView
            android:id="@+id/iv_dynamic_product_image"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/tv_dynamic_product_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_dynamic_product_image"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="#666666"
            android:textSize="30px" />

    </RelativeLayout>
</LinearLayout>