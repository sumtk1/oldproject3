<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/cl_white">

        <View
            android:id="@+id/view_freight_color"
            android:layout_width="10px"
            android:layout_height="40px"
            android:layout_centerVertical="true"
            android:background="@color/cl_29b69d" />

        <TextView
            android:id="@+id/tv_freight_name"
            android:layout_toLeftOf="@+id/ll_freight_choice"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginLeft="36px"
            android:text="运费模块运费模块"
            android:textColor="@color/cl_333"
            android:textSize="30px" />

        <LinearLayout
            android:id="@+id/ll_freight_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_freight_item_corner"
                android:gravity="center"
                android:padding="10px"
                android:text="使用此模板"
                android:textColor="#ff7f29"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/buju_view"
        />

    <RelativeLayout
        android:id="@+id/rl_freight_bottom"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@color/cl_white"
        >

        <LinearLayout
            android:id="@+id/ll_freight_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="37px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28px"
                android:layout_height="34px"
                android:src="@mipmap/ic_yunfei_bianji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13px"
                android:text="编辑"
                android:textColor="@color/cl_666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_freight_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25px"
            android:layout_marginRight="34px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28px"
                android:layout_height="34px"
                android:src="@mipmap/ic_yunfei_shangchu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13px"
                android:text="删除"
                android:textColor="@color/cl_666"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>



</LinearLayout>