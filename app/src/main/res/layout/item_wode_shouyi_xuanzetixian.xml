<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:background="@drawable/bg_radius">

        <ImageView
            android:id="@+id/iv_poundage_icon"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/iv_poundage_icon"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_poundage_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/cl_333"
                android:textSize="32px"/>

            <TextView
                android:id="@+id/tv_poundage_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text=""
                android:textColor="@color/cl_999"
                android:textSize="26px"/>
        </LinearLayout>

        <ImageView
            android:layout_width="16px"
            android:layout_height="28px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@mipmap/tixian_xuanze"/>
    </RelativeLayout>
</LinearLayout>