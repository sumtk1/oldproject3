<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="31px">
            <ImageView
                android:id="@+id/iv_guanggao"
                android:layout_width="match_parent"
                android:layout_height="220px"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#50000000">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="16px"
                    android:textSize="32px"
                    android:textColor="#ffffff"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text=""/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="243px"
            android:layout_below="@+id/rl_title"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="9px"
            android:layout_marginBottom="30px"
            android:background="#e0e0e0"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_son1"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_margin="1px"
                android:background="@color/cl_white">

                <ImageView
                    android:id="@+id/iv_son_icon1"
                    android:layout_width="101px"
                    android:layout_height="101px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px" />

                <TextView
                    android:id="@+id/tv_son_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23px"
                    android:layout_toRightOf="@+id/iv_son_icon1"
                    android:layout_toLeftOf="@+id/iv_right"
                    android:layout_marginRight="23px"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#333333"
                    android:textSize="27px" />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"></ImageView>
                    <!--android:src="@mipmap/ic_forward01" />-->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_son2"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:background="@color/cl_white">

                <ImageView
                    android:id="@+id/iv_son_icon2"
                    android:layout_width="101px"
                    android:layout_height="101px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"/>

                <TextView
                    android:id="@+id/tv_son_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23px"
                    android:layout_toRightOf="@+id/iv_son_icon2"
                    android:layout_toLeftOf="@+id/iv_right_02"
                    android:layout_marginRight="23px"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#333333"
                    android:textSize="27px" />

                <ImageView
                    android:id="@+id/iv_right_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"/>
                    <!--android:src="@mipmap/ic_forward01" />-->
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>