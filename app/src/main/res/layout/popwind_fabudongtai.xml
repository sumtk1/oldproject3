<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <TextView
        android:id="@+id/tv_ppwd_fbdt_kongbai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:id="@+id/ll_ppwd_fbdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cl_white"
        android:layout_gravity="bottom"
        >
        <RelativeLayout
            android:id="@+id/rl_ppwd_fbdt_shipin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/cl_white"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            >

            <ImageView
                android:id="@+id/iv_ppwd_fbdt_shipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_collection" />

            <TextView
                android:id="@+id/tv_ppwd_fbdt_shipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_ppwd_fbdt_shipin"
                android:text="视频"
                android:textColor="@color/cl_black"
                android:textSize="32px"
                android:layout_marginTop="19px"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ppwd_fbdt_tuwen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:background="@color/cl_white">

            <ImageView
                android:id="@+id/iv_ppwd_fbdt_tuwen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_shimingrenzheng"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_ppwd_fbdt_tuwen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_below="@+id/iv_ppwd_fbdt_tuwen"
                android:text="图文"
                android:layout_centerHorizontal="true"
                android:textColor="@color/cl_black"
                android:layout_marginTop="19px"
                android:textSize="32px" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_ppwd_fbdt_shangpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/cl_white"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            >

            <ImageView
                android:id="@+id/iv_ppwd_fbdt_shangpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_about_us"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_ppwd_fbdt_shangpin"
                android:layout_below="@+id/iv_ppwd_fbdt_shangpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="商品"
                android:textColor="@color/cl_black"
                android:textSize="32px"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>