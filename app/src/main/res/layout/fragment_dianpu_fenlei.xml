<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_background">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_fg_dianpu_fenlei"
        android:layout_width="720px"
        android:layout_height="70px"
        android:layout_weight="1"
        app:tabIndicatorColor="@color/cl_background"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/cl_activity_main"
        app:tabTextColor="@color/cl_black" />

    <com.gloiot.hygoSupply.widget.NoScrollViewPager
        android:id="@+id/vp_fg_dianpu_fenlei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_fg_dianpu_fenlei"/>

</RelativeLayout>
