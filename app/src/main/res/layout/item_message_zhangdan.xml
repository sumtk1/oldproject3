<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:paddingTop="10px"
            android:paddingBottom="9px"
            android:paddingLeft="24px"
            android:paddingRight="23px"
            android:text=""
            android:textSize="22px"
            android:textColor="#fefefe"
            android:background="@drawable/bg_radius_cecece"
            android:visibility="visible"/>
        <FrameLayout
            android:id="@+id/ll_message"
            android:layout_width="match_parent"
            android:layout_height="154px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@drawable/bg_dialog">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="24px">
                <ImageView
                    android:id="@+id/iv_message_icon"
                    android:layout_width="106px"
                    android:layout_height="106px" />

                <TextView
                    android:id="@+id/tv_message_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="28px"
                    android:textColor="#333333"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="16px"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/iv_message_icon"/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_message_title"
                    android:layout_toRightOf="@+id/iv_message_icon"
                    android:layout_marginTop="55px"
                    android:layout_marginLeft="20px"
                    android:text=""
                    android:textSize="38px"
                    android:textColor="#ff436f"/>
            </RelativeLayout>
            
            <!--<ImageView-->
                <!--android:layout_width="100px"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@mipmap/bg_querenfukuan"-->
                <!--android:layout_gravity="right"-->
                <!--android:visibility="visible"/>-->

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>