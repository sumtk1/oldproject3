<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/item_zhanghao_qiehuan"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginTop="1px"
        android:background="@drawable/bt_rl"
        android:paddingLeft="30px">

        <ImageView
            android:id="@+id/item_zhanghao_qiehuan_touxiang"
            android:layout_width="56px"
            android:layout_height="56px"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/item_zhanghao_qiehuan_zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/item_zhanghao_qiehuan_touxiang"
            android:maxLines="1"
            android:text="654564564564"
            android:textColor="@color/cl_333333"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/item_zhanghao_qiehuan_currentAccount"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_quan" />

        <TextView
            android:id="@+id/item_zhanghao_qiehuan_delete"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/cl_ff6d63"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/cl_white"
            android:textSize="32px"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
