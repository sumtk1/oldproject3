<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_background">

    <include
        android:id="@+id/include_title"
        layout="@layout/include_head_white" />

    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="198px"
        android:layout_below="@+id/include_title"
        android:background="@color/cl_white">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32px"
            android:text="待缴纳(元)"
            android:textColor="#333333"
            android:textSize="22px" />

        <TextView
            android:id="@+id/tv_bzj_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68px"
            android:text="0"
            android:textColor="#FE8636"
            android:textSize="64px" />

        <TextView
            android:id="@+id/tv_bzj_money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="145px"
            android:text="需缴纳(￥0)"
            android:textColor="#999999"
            android:textSize="22px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_02"
        android:layout_width="match_parent"
        android:layout_height="198px"
        android:layout_below="@+id/rl_01"
        android:layout_marginTop="20px"
        android:background="@color/cl_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:layout_marginTop="33px"
            android:text="缴纳账户"
            android:textColor="#333333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_bzj_jnzh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34px"
            android:layout_marginTop="33px"
            android:text="（￥0）"
            android:textColor="#FF6D63"
            android:textSize="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33px"
            android:layout_toLeftOf="@+id/tv_bzj_jnzh"
            android:text="商家收益"
            android:textColor="#999999"
            android:textSize="30px" />

        <View
            android:layout_width="690px"
            android:layout_height="1px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="96px"
            android:background="#E5E5E5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:layout_marginTop="129px"
            android:text="缴纳金额"
            android:textColor="#333333"
            android:textSize="30px" />

        <EditText
            android:id="@+id/et_bzj_money"
            android:layout_width="558px"
            android:layout_height="96px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入缴纳的金额"
            android:inputType="number"
            android:paddingRight="34px"
            android:singleLine="true"
            android:textSize="30px" />

    </RelativeLayout>


    <CheckBox
        android:id="@+id/cb_bzj_xuzhi"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_below="@+id/rl_02"
        android:layout_marginLeft="34px"
        android:layout_marginTop="36px"
        android:background="@drawable/bg_checkbox"
        android:button="@null"
        android:checked="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_02"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80px"
        android:layout_marginTop="36px"
        android:text="缴纳"
        android:textColor="@color/cl_666"
        android:textSize="24px" />

    <TextView
        android:id="@+id/tv_bzj_xuzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_02"
        android:layout_marginLeft="130px"
        android:layout_marginTop="36px"
        android:text="《信誉保证金须知》"
        android:textColor="#ff7f29"
        android:textSize="24px" />


    <Button
        android:id="@+id/btn_bzj"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginTop="120px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_below="@+id/tv_bzj_xuzhi"
        android:background="@drawable/bg_btn_confirm_radius"
        android:gravity="center"
        android:text="去缴纳"
        android:textColor="@color/cl_white"
        android:textSize="32px" />

</RelativeLayout>
