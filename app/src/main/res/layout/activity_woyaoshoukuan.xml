<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_activity_newmain"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/toptitle_rl_1"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/cl_activity_newmain">

        <RelativeLayout
            android:id="@+id/toptitle_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px">

            <ImageView
                android:layout_width="20px"
                android:layout_height="33px"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_titilebar_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/toptitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我要收款"
            android:textColor="@color/cl_white"
            android:textSize="36px" />

        <RelativeLayout
            android:id="@+id/rl_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32px">

            <TextView
                android:id="@+id/toptitle_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/cl_white"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/toptitle_more_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="30px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/rl_01">

            <TextView
                android:id="@+id/toptitle_more01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/cl_white"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/toptitle_more_img01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="30px" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toptitle_rl_1"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="72px"
        android:background="@drawable/bg_yuanjiaobeijing"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38px"
            android:text="扫二维码向我付款"
            android:textColor="#999999"
            android:textSize="32px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="38px"
            android:background="#EFEFEF" />

        <ImageView
            android:id="@+id/iv_shoukuan_icon"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:src="@mipmap/ic_wode" />

        <TextView
            android:id="@+id/tv_shoukuan_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24px"
            android:text=""
            android:textColor="#333333"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/iv_shoukuan_qrcode"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px" />


        <RelativeLayout
            android:id="@+id/rl_shoukuan_jilu"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginTop="30px"
            android:background="@drawable/bg_button_yuanjiaobeijing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="收款记录"
                android:textColor="#666666"
                android:textSize="30px" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>