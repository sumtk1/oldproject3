<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/cl_background"
        android:layout_height="185px">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@color/cl_white"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="24px">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/item_wode_shouyi_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical"
                    android:layout_gravity="end"
                    android:text=""
                    android:textColor="#ff6666"
                    android:textSize="40px" />

                <ImageView
                    android:id="@+id/img_wode_shouyi_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_gravity="end"
                    android:layout_below="@+id/item_wode_shouyi_price"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="60px"
                    android:textColor="#ff6666"
                    android:textSize="40px" />
            </FrameLayout>


            <ImageView
                android:id="@+id/iv_wode_shouyi_picture"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"/>

            <RelativeLayout
                android:id="@+id/item_rl_01"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="34px"
                android:layout_toRightOf="@+id/iv_wode_shouyi_picture"
                android:background="@color/cl_white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_wode_shouyi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/cl_333"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/item_wode_shouyi_shuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/item_wode_shouyi_title"
                    android:text="*3"
                    android:textColor="@color/cl_999"
                    android:textSize="24px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_wode_shouyi_zhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/item_wode_shouyi_shuliang"
                    android:background="@drawable/bg_xuxiangkuang"
                    android:padding="6px"
                    android:text="交易成功"
                    android:textColor="#ff6666"
                    android:textSize="20px"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_wode_shouyi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_rl_01"
                android:layout_marginLeft="30px"
                android:layout_marginTop="12px"
                android:layout_toRightOf="@+id/iv_wode_shouyi_picture"
                android:text=""
                android:textColor="@color/cl_999"
                android:textSize="22px" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
