<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_bg_gray">

    <include
        android:id="@+id/include"
        layout="@layout/include_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_below="@+id/include"
        android:layout_margin="15dp"

        android:background="@mipmap/ic_audit_result_background">

        <ImageView
            android:id="@+id/iv_audit_result"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
           />

        <TextView
            android:id="@+id/tv_audit_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_audit_result"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/cl_666"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_audit_icon"
            android:layout_width="101dp"
            android:layout_height="107dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42dp"
            android:layout_marginTop="120dp"
            android:src="@mipmap/ic_audit_result" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="164dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="发布时间"
                android:textColor="@color/cl_999"
                android:textSize="11sp"

                />

            <TextView
                android:id="@+id/tv_audit_release_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="@color/cl_333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="19dp"
                android:text="审核时间"
                android:textColor="@color/cl_999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_audit_audit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="@color/cl_333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="19dp"
                android:text="失败原因"
                android:textColor="@color/cl_999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_audit_failure_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="@color/cl_333"
                android:textSize="13sp" />


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
