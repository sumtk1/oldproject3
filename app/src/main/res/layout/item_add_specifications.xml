<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_add_specifications_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="#ff666666"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="实际收益"
            android:textColor="#ff666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_item_add_specifications_earnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="#ffff6d63"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_item_add_specifications_supplyprice"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@color/cl_eee"
            android:gravity="center"
            android:hint="输入供货价"
            android:inputType="numberDecimal"
            android:textColor="@color/cl_333"
            android:textColorHint="@color/cl_999"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/et_item_add_specifications_retailprice"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@color/cl_eee"
            android:gravity="center"
            android:hint="输入零售价"
            android:inputType="numberDecimal"
            android:textColor="@color/cl_333"
            android:textColorHint="@color/cl_999"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/et_item_add_specifications_stock"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/cl_eee"
            android:gravity="center"
            android:hint="输入库存"
            android:inputType="number"
            android:textColor="@color/cl_333"
            android:textColorHint="@color/cl_999"
            android:textSize="13dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="14dp"
        android:background="@color/cl_e1e2e3" />
</LinearLayout>