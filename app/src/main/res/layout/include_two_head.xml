<?xml version="1.0" encoding="utf-8"?>
<com.zyd.wlwsdk.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toptitle_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f9f9">

    <RelativeLayout
        android:id="@+id/rl_twotitle_all"
        android:layout_width="match_parent"
        android:layout_height="97px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/RelativeLayout2">

        <ImageView
            android:id="@+id/iv_twotitle_back"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_twotile_1"
                android:layout_width="152px"
                android:layout_height="52px"
                android:background="@drawable/bg_tv_3_shape_selected"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/cl_white"
                android:textSize="14sp" />

            <View
                android:layout_width="2px"
                android:layout_height="52px"
                android:background="@color/cl_ff7f29"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_twotile_2"
                android:layout_width="152px"
                android:layout_height="52px"
                android:layout_marginLeft="-3px"
                android:layout_toRightOf="@+id/tv_twotile_1"
                android:background="@drawable/bg_tv_3_shape_center"
                android:gravity="center"
                android:text="已使用"
                android:textColor="@color/cl_666666"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_twotitle_line2"
                android:layout_width="2px"
                android:layout_height="52px"
                android:background="@color/cl_ff7f29"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_twotile_3"
                android:layout_width="152px"
                android:layout_height="52px"
                android:layout_marginLeft="-3px"
                android:layout_toRightOf="@+id/tv_twotile_2"
                android:background="@drawable/bg_tv_3_shape_right"
                android:gravity="center"
                android:text="已停用"
                android:textColor="@color/cl_666666"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_twotitle_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_twotile_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/cl_white"
                android:textSize="10sp" />


        </LinearLayout>


        <View
            style="@style/title_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="96px" />

    </RelativeLayout>

</com.zyd.wlwsdk.autolayout.AutoRelativeLayout>
