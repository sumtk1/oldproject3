<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_after_sale_order"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv_after_sale_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/tv_after_sale_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_after_sale_image"
        android:text=""
        android:textColor="@color/cl_333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_after_sale_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_after_sale_status"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_after_sale_image"
        android:text=""
        android:textColor="@color/cl_999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_after_sale_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp"
        android:text=""
        android:textColor="@color/cl_999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_after_sale_explain"
        android:layout_marginTop="15dp"
        android:background="@color/cl_e1e2e3" />
</RelativeLayout>
