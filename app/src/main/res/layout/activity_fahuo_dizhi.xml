<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_background">

    <include
        android:id="@+id/include2"
        layout="@layout/include_head" />

    <ListView
        android:id="@+id/lv_fahuo_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:background="@color/cl_white"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_fahuo_dizhi_none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150px"
            android:src="@mipmap/meiyoudizhi" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:text="你还没有发货地址喔~" />

        <Button
            android:id="@+id/btn_fahuo_dizhi_tianjia"
            android:layout_width="300px"
            android:layout_height="80px"
            android:layout_below="@+id/textView18"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:background="@color/cl_activity_newmain"
            android:text="添加新地址"
            android:textColor="@color/cl_white"
            android:textSize="34px" />

    </RelativeLayout>
</RelativeLayout>
