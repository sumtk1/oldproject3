<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_background">

    <RelativeLayout
        android:id="@+id/status_bar_filler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_activity_main" />

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="match_parent"
        android:layout_height="97px"
        android:layout_below="@+id/status_bar_filler">

        <ImageView
            android:id="@+id/iv_shangpin_guige_back"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_toptitle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品规格"
            android:textColor="@color/cl_include_head_title"
            android:textSize="36px" />

        <TextView
            android:id="@+id/iv_shangpin_guige_add"
            android:layout_width="95px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/cl_include_head_right" />

        <!--<ImageView-->
        <!--android:id="@+id/iv_shangpin_guige_add"-->
        <!--android:layout_width="95px"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:scaleType="center"-->
        <!--android:src="@mipmap/ic_miaoshu_add"-->
        <!--android:textColor="@color/cl_include_head_right" />-->

        <View
            style="@style/title_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="96px"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tianjia_shangpin_guige"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_tianjia_shangpin_guige_queding"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout7"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_hongli_mingxi_no_zhangdan_img"
            android:layout_width="92px"
            android:layout_height="106px"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="118px"
            android:src="@mipmap/ic_no_zhangdan"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_hongli_mingxi_no_zhangdan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_hongli_mingxi_no_zhangdan_img"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:text="请添加商品规格"
            android:textColor="#666"
            android:textSize="32px"
            android:visibility="visible" />

    </RelativeLayout>


    <ListView
        android:id="@+id/lv_tianjia_shangpin_guige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_tianjia_shangpin_guige_queding"
        android:layout_below="@+id/relativeLayout7"
        android:background="@color/cl_background"
        android:descendantFocusability="beforeDescendants"
        android:divider="@null"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_tianjia_shangpin_guige_queding"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/corners_button"
        android:text="请添加商品规格"
        android:textColor="@color/cl_money"
        android:textSize="36px" />
</RelativeLayout>
