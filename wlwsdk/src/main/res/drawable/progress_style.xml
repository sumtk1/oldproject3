<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>

            <gradient
                android:angle="270.0"
                android:endColor="#00EEEEEE"
                android:startColor="#00EEEEEE" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:centerColor="#6cd9aa"
                    android:endColor="#6cd9aa"
                    android:startColor="#6cd9aa"/>
                <corners android:radius="0.0dip" />
            </shape>
        </clip>
    </item>

</layer-list>