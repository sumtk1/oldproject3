<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <ImageView
            android:id="@+id/view_im_mode_iv_icon"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/view_im_mode_tv_send"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="#F4772F"
            android:text="发\n送\n宝\n贝"
            android:textSize="14dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/view_im_mode_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_im_mode_iv_icon"
            android:layout_toLeftOf="@+id/view_im_mode_tv_send"
            android:layout_alignTop="@+id/view_im_mode_iv_icon"
            android:layout_marginRight="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            android:textSize="14dp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/view_im_mode_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_im_mode_iv_icon"
            android:layout_alignBottom="@+id/view_im_mode_iv_icon"
            android:text=""
            android:textSize="14dp"
            android:textColor="#ff436f"/>
    </RelativeLayout>
</LinearLayout>